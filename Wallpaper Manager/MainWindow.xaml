<mah:MetroWindow x:Class="Wallpaper_Manager.MainWindow"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallpaper_Manager"
        mc:Ignorable="d"
        Background="#252525"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Height="50" Width="100" Content="Set Wallpaper" Click="Set_Wallpaper"/>
        <Button Height="50" Width="100" Content="Set Anm Wallpaper" Click="Set_Anm_Wallpaper" Margin="451,184,241,185"/>
        <ComboBox Height="50" Width="100" Margin="346,240,346,129">
            <ComboBoxItem IsSelected="True" Content="Tiled" Selected="ComboBoxItem_Selected_Tiled"/>
            <ComboBoxItem Content="Centered" Selected="ComboBoxItem_Selected_Centered"/>
            <ComboBoxItem Content="Stretched" Selected="ComboBoxItem_Selected_Stretched"/>
            <ComboBoxItem Content="Fit" Selected="ComboBoxItem_Selected_Fit"/>
            <ComboBoxItem Content="Fill" Selected="ComboBoxItem_Selected_Fill"/>
        </ComboBox>
    </Grid>
</mah:MetroWindow>
